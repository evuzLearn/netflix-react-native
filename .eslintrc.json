{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "camelcase": 1,
        "no-undef": 1,
        "no-unreachable": 1,
        "no-unused-vars": 1,
        "no-multi-spaces": 1,
        "no-magic-numbers": 1,

        "quotes": [2, "single"],        
        "no-const-assign": 2,
        "no-this-before-super": 2,
        "valid-typeof": 2
    }
}